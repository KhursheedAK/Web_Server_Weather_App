<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Weather App</title>
    <link rel='stylesheet' href='/css/styles.css' />
    <script src='/js/script.js' defer></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

  </head>
  <body class="d-flex flex-column min-vh-100">
    {{>header}}
    <!-- Main content area -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center">
      <div class="container fs-1 text-center">
        <p>{{description}}</p>
        <!-- Form -->
        <form class="form-inline">
          <div class="form-group mx-sm-3" style="margin: 5.5rem 0rem 2.5rem 0rem;">
            <label for="location" class="sr-only fs-1 mb-3">City: </label>
            <input type="text" class=" fs-1" id="location" placeholder="Location">
            <button type="submit" class="btn btn-primary mb-2 fs-1">Search</button>
          </div>
        </form>
        <!-- Form End -->
        <table id="weatherTable" class="table" style="visibility: hidden">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Location</th>
              <th scope="col">Forcast</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td id="weatherLocationCell"></td>
              <td id="weatherForcastCell"></td>
            </tr>
          </tbody>
        </table>
        <p id="errorText" style="visibility: hidden;"></p>
      </div>
    </main>
    <!-- Footer -->
    {{>footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>